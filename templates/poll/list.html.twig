{% extends "base.html.twig" %}

{% block body %}
    <a href="{{ url('poll_add') }}">
        <button type="button" class="btn btn-success pull-right">Dodaj ankiete
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </a>
    <br><br>
    <table class="table table-bordered">
        <tr class="info">
            <td>Id ankiety.</td>
            <td>Nazwa ankiety</td>
            <td>Operacje</td>
        </tr>
        {% for row in polls %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.name }}</td>
                <td>

                    <button type="button" class="btn btn-default">Dodaj pytania
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>

                    <button type="button" class="btn btn-danger">Usu≈Ñ
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

